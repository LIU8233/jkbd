<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@mipmap/main"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">
        <ProgressBar
            android:id="@+id/dia_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_load"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="下载试题中..."
            android:textColor="#000"
            android:textSize="20px"
            android:gravity="center_horizontal"/>
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/exam_title"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:id="@+id/tv_testInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@string/exam_title"
        android:textColor="#000"
        android:layout_marginLeft="20dp"
       />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#456"
        android:layout_margin="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp">
        <TextView
            android:id="@+id/tv_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1."
            android:textSize="20dp"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/tv_question_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="这个标志是何含义"
            android:textSize="20dp"
            android:textColor="#000"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/image_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@mipmap/exam_65"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A."
            android:textSize="20dp"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/tv_answer_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="非机动车道"
            android:textSize="15dp"
            android:textColor="#000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B."
            android:textSize="20dp"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/tv_answer_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="摩托车专用道"
            android:textSize="15dp"
            android:textColor="#000"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C."
            android:textSize="20dp"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/tv_answer_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="电瓶车专用道"
            android:textSize="15dp"
            android:textColor="#000"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D."
            android:textSize="20dp"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/tv_answer_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="自行车专用道"
            android:textSize="15dp"
            android:textColor="#000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center_horizontal">
        <CheckBox
            android:id="@+id/cb_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A"
            android:layout_marginLeft="15dp"/>
        <CheckBox
            android:id="@+id/cb_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B"
            android:layout_marginLeft="15dp"/>
        <CheckBox
            android:id="@+id/cb_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:layout_marginLeft="15dp"/>
        <CheckBox
            android:id="@+id/cb_04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D"
            android:layout_marginLeft="15dp"/>

    </LinearLayout>
    <Gallery
        android:id="@+id/gallery"
        android:spacing="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Gallery>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/exam_pre32x32"
            android:background="@null"
            android:text="上一题"
            android:onClick="preExam"
            android:layout_alignParentLeft="true"/>
        <Button
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/exam_next32x32"
            android:background="@null"
            android:text="下一题"
            android:onClick="nextExam"
            android:layout_alignParentRight="true"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_next"
            android:drawableLeft="@mipmap/exam_commit32x32"
            android:background="@null"
            android:text="交卷"
            android:onClick="commit"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="剩余时间:"
        android:gravity="center_horizontal"
        android:textColor="#000"
        android:textSize="15dp"
        android:layout_marginTop="10dp"/>



</LinearLayout>
